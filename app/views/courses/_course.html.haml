.card
  .card-header
    .fa.fa-graduation-cap
    = link_to course.title, course
  .card-body
    %small 
      = simple_format(course.short_description)
  .card-footer.text-center
    = number_to_currency(course.price)
  .card-footer
    .row
      .col-6
        .fa.fa-globe-africa
        = course.language
      .col-6.text-right
        .fa.fa-signal
        = course.level
  .card-footer
    .row
      .col-6
        .far.fa-clock
        = course.created_at.strftime('%d-%b-%Y')
      .col-6.text-right
        .fa.fa-chalkboard-teacher
        = course.user
  .card-footer
    = link_to 'Показать', course, class: 'btn btn-sm btn-primary'
    = link_to 'Изменить', edit_course_path(course), class: 'btn btn-sm btn-warning'
    = link_to 'Удалить', course, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-sm btn-danger'
